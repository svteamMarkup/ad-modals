mixin modal(data)
	.modal

mixin modal-subs-content(data)
	-var modifier = attributes.class || ''
	.modal(class="#{modifier}")
		.modal__content
			.modal__title Регистрация: подписка на контент
			.modal__text Чтобы подключить доступ к Подписке на Контент, заполните следующую форму:
			form.modal-form
				label.modal-form__label Введите номер мобильного телефона
				input(type="text" placeholder="7 916 987 11 11 " value="").modal-form__input
				.modal-form__example Пример: +7 (916) 987 11 11 или +380 (50) 111 11 11
				input(type="submit" value="Выслать пароль").modal-form__button._purple
		.modal__limitation._gray 18+	

